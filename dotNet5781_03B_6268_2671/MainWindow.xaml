<Window x:Class="dotNet5781_03B_6268_2671.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNet5781_03B_6268_2671"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Grid>
        <Grid Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="400*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1">
                <Grid Margin="10" Height="300">
                    <ListBox x:Name="myLBI" MouseDoubleClick="listBox_SelectionChanged" SelectionMode="Single"></ListBox>
                </Grid>
                <Button Content="ADD" Click="ADDBUS_Click" Margin="10" Height="30" FontWeight="Bold" FontSize="14"></Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
