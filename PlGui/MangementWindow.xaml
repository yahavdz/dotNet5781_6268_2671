<Window x:Class="PlGui.MangementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlGui"
        mc:Ignorable="d"
        Title="MangementWindow" Height="550" Width="800">
    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="busButton" Content="Bus display" Margin="10 10 5 10" FontSize="32" Grid.Column="0"/>
            <Button x:Name="lineButton" Content="Line display" Margin="5 10 5 10" FontSize="32" Grid.Column="1" Click="lineButton_Click"/>
            <Button x:Name="stationButton" Content="Station display" Margin="5 10 10 10" FontSize="32" Grid.Column="2" Click="stationButton_Click"/>
        </Grid>
        <Grid Grid.Row="1" Margin="30 20 30 20">
            <ListBox x:Name="myLBI"/>
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="addButton" Content="ADD" Width="100" Margin="10 10 5 10" FontSize="24" Grid.Column="0" Click="addButton_Click"/>
            <Button x:Name="deleteButton" Content="DELETE" Width="100" Margin="5 10 5 10" FontSize="24" Grid.Column="1" Click="deleteButton_Click"/>
            <Button x:Name="updateButton" Content="UPDATE" Width="100" Margin="5 10 10 10" FontSize="24" Grid.Column="2" Click="updateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
